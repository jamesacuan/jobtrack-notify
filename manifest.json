{
     "name": "jobtrack-notify",
     "description": "Shows a toast notification for new or unassigned jobtrack.",
     "version": "0.1.3",    
	 "content_scripts":[
        {
            "matches": ["http://jobtrack.ncg.sencor.net/resolverdb.aspx"],
            "js": ["/js/contentscript.js"]
        }
     ],
     "options_ui": {
        "page": "options.html",
        "chrome_style": true
     },
     "permissions":["notifications", "storage"],
     "web_accessible_resources": [
        "/js/notify.js",
        "/js/moment.min.js",
        "/js/options.js"
     ],
     "manifest_version": 4
}