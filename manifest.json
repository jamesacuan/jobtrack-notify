{
     "name": "Netops",
     "description": "Applies fixes in most netops sites. Shows a toast notification for new or unassigned jobtrack.",
     "homepage_url": "http://nod.sencor.net",
     "version": "0.2.0",    
	 "content_scripts":[
        {
            "matches": [
                "http://nod.sencor.net/PSIEmail/PSI.aspx",
                "http://jobtrack.ncg.sencor.net/resolverdb.aspx"
            ],
            "js": [
                "/js/contentscript.js"
            ]
        }
     ],

     "options_ui": {
        "page": "options.html",
        "chrome_style": true
     },

     "permissions":[
         "notifications",
         "storage",
         "contextMenus"
     ],

     "web_accessible_resources": [
        "/js/jquery.min.js",
        "/js/fix.js",    
        "/js/options.js",
        "/js/moment.min.js"
     ],

     "browser_action": {
         "default_title" : "NOD",
         "default_icon"  : "/img/favicon-none.png",
         "default_popup" : "popup.html"
     },

    "background": {
        "scripts": [
            "/js/jquery.min.js",
            "/js/background.js",
            "/js/moment.min.js"
        ]
    },

     "manifest_version": 2
}