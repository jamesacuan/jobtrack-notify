{
     "name": "netops-fix",
     "description": "Applies fixes in most netops sites. Shows a toast notification for new or unassigned jobtrack.",
     "homepage_url": "http://nod.sencor.net",
     "version": "0.1.9",    
	 "content_scripts":[
        {
            "matches": ["*://*.sencor.net/*"],
            "js": ["/js/contentscript.js"]
        }
     ],

     "options_ui": {
        "page": "options.html",
        "chrome_style": true
     },

     "permissions":[
         "notifications",
         "storage",
         "contextMenus"
     ],

     "web_accessible_resources": [
        "/js/notify.js",
        "/js/moment.min.js",
        "/js/options.js",
        "/js/jquery.min.js",
        "/js/clipboard.min.js"
     ],

     "browser_action": {
         "default_title" : "NOD",
         "default_icon"  : "/img/favicon-none.png",
         "default_popup" : "popup.html"
     },

    "background": {
        "scripts": ["/js/background.js"]
    },

     "manifest_version": 4
}